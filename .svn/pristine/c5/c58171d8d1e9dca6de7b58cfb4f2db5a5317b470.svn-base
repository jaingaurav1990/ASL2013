BEGIN;
CREATE TABLE queues (
		id		integer primary key
);
COMMIT;

BEGIN;
CREATE TABLE clients (
		id 		integer primary key,
		flag	char(1) not null
);
COMMIT;

BEGIN;
CREATE TABLE messages (
		mid 	integer primary key,
		qid		integer references queues(id) not null,
		msg		varchar(2000),
		pri		smallint not null,
		type	char(1) not null,
		sender	integer references clients(id) not null,
		receiver integer references clients(id),
		tstamp	timestamp not null
);	
COMMIT;
